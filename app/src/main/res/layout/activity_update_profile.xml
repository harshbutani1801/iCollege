<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile"
    android:background="@drawable/form_background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="16dp"
            android:src="@drawable/arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/dashboard"
            android:text="UPDATE PROFILE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="User ID :"
                android:textColor="@color/black"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_userid"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="N/A"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="User Name :"
                android:textColor="@color/black"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="N/A"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="User Type :"
                android:textColor="@color/black"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_usertype"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="N/A"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_useremail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000"
            app:boxCornerRadiusBottomEnd="40dp"
            app:boxCornerRadiusBottomStart="40dp"
            app:boxCornerRadiusTopEnd="40dp"
            app:boxCornerRadiusTopStart="40dp"
            app:boxStrokeColor="@color/black"
            app:counterMaxLength="20"
            app:counterOverflowTextColor="@color/black"
            app:counterTextColor="@color/black"
            app:helperTextTextColor="@color/black"
            app:hintTextColor="@color/black"
            app:placeholderTextColor="#000000"
            app:prefixTextColor="#000000"
            app:suffixTextColor="#000000"
            android:layout_marginBottom="05dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_useremail"
                android:hint="Email Address"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorLink="#000"
                android:textSize="15sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_usermobile"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000000"
            app:boxCornerRadiusBottomEnd="40dp"
            app:boxCornerRadiusBottomStart="40dp"
            app:boxCornerRadiusTopEnd="40dp"
            app:boxCornerRadiusTopStart="40dp"
            app:boxStrokeColor="@color/black"
            app:counterMaxLength="20"
            app:counterOverflowTextColor="@color/black"
            app:counterTextColor="@color/black"
            app:helperTextTextColor="@color/black"
            app:hintTextColor="@color/black"
            app:placeholderTextColor="#000000"
            app:prefixTextColor="#000000"
            app:suffixTextColor="#000000"
            android:layout_marginBottom="05dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_usermobile"
                android:hint="Mobile Number"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:inputType="number"
                android:maxLength="13"
                android:textColor="@color/black"
                android:textColorLink="#000"
                android:textSize="15sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="User Department :"
                android:textColor="@color/black"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_userdept"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="N/A"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="User Branch :"
                android:textColor="@color/black"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_userbranch"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="N/A"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="User Designation :"
                android:textColor="@color/black"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_userdesg"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="N/A"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_update_profile"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Update Profile"
            android:layout_gravity="right"
            android:textColor="@color/white"
            app:cornerRadius="20dp">
        </com.google.android.material.button.MaterialButton>
    </LinearLayout>

</RelativeLayout>